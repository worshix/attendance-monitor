// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Authorization {
  id              Int          @id @default(autoincrement())
  name            String
  rfid_code       String       @unique
  finger_print_id String?      @unique
  flagged         Boolean      @default(false)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  Attendance      Attendance[]

  @@map("authorization")
}

// another table for the guys who have attended, should be linked to the authorization table
model Attendance {
  id              Int           @id @default(autoincrement())
  authorizationId Int
  attendedAt      DateTime      @default(now())
  authorization   Authorization @relation(fields: [authorizationId], references: [id])

  @@map("attendance")
}
