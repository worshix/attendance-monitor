// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Authorization {
  rfid_code       String       @id
  name            String
  finger_print_id String?      @unique
  flagged         Boolean      @default(false)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  Attendance      Attendance[]

  @@map("authorization")
}

// another table for the guys who have attended, should be linked to the authorization table
model Attendance {
  rfid_code       String        @id
  attendedAt      DateTime      @default(now())
  authorization   Authorization @relation(fields: [rfid_code], references: [rfid_code], onDelete: Cascade, onUpdate: Cascade)

  @@map("attendance")
}
